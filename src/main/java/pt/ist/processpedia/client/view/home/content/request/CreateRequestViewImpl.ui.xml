<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.view">
  <ui:style>
    .container {
      width: 100%;
      padding: 10px 10px;
    }
    .title {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .label {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 15px;
      font-weight: bold;
      margin-bottom: 3px;
    }
    .textbox {
      font-size: 16px;
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-weight: 300;
      margin-bottom: 10px;
      width: 300px;
      border: 1px solid #CCC;
      background-color: #EEE;
      border-radius: 5px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      padding: 10px 10px;
    }
    .textbox:focus {
      outline: none;
    }
    .submitButton {
      padding-left: 20px;
      padding-right: 20px;
      font-size: 15px;
      font-weight: bold;
    }
    .saveButton {
      padding-left: 20px;
      padding-right: 20px;
      font-size: 15px;
      margin-right: 20px;
    }
    .cancelButton {
      padding-left: 20px;
      padding-right: 20px;
      background-color: white;
      font-size: 15px;
      border: 0px;
      border-right: 1px solid #CCC;
      margin-right: 20px;
      cursor: pointer;
      cursor: hand;
    }
    .inputDataObjectContainer {
      width: 100%;
    }
    .tree {
      width: 100%;
    }
    .cancelButton:hover {
      text-decoration: underline;
    }
    .buttonsContainer {
      text-align: right;
      margin-top: 30px;
    }
  </ui:style>
  <g:VerticalPanel addStyleNames="{style.container}" verticalAlignment="ALIGN_MIDDLE">
    <g:Label styleName="{style.title}" ui:field="createRequestTitleContainer"/>

<!--
    <p:home.content.request.recommendation.RequestRecommendationPanelViewImpl ui:field="requestRecommendationPanelView" />
-->
    <g:Label styleName="{style.label}" ui:field="toLabelContainer"/>
    <p:util.TokenTextBox styleName="{style.textbox}" ui:field="toContainer"/>

    <g:Label styleName="{style.label}" ui:field="requestTitleLabelContainer"/>
    <g:SuggestBox styleName="{style.textbox}" ui:field="subjectSuggestBox"/>
    <g:Label styleName="{style.label}" ui:field="requestDescriptionLabelContainer"/>
    <g:TextBox styleName="{style.textbox}" ui:field="requestDescriptionContainer"/>
    <g:CheckBox ui:field="expectsAnswerContainer" />

    <g:VerticalPanel styleName="{style.inputDataObjectContainer}">
      <g:Label styleName="{style.label}" ui:field="requestDataObjectLabelContainer"/>
      <g:Tree styleName="{style.tree}" ui:field="inputDataObjectsContainer" />
    </g:VerticalPanel>

    <g:FlowPanel styleName="{style.buttonsContainer}">
      <g:Button styleName="{style.cancelButton}" ui:field="cancelAction" />
      <g:Button addStyleNames="{style.saveButton}" ui:field="saveAction" />
      <g:Button addStyleNames="{style.submitButton}" ui:field="publishRequestAction" />
    </g:FlowPanel>

 </g:VerticalPanel>
</ui:UiBinder>