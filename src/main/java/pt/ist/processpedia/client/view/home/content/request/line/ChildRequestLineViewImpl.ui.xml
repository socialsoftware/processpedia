<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.view.util">
  <ui:style>
    .container {
      width: 100%;
      padding: 5px 5px;
      background-color: white;
      border-radius: 5px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
    }
    .avatar {
      width: 45px;
      height: 45px;
      border-radius: 5px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
    }
    .initiatorName {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 13px;
      font-style: italic;
    }
    .requestTitle {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 11px;
    }
    .date {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 11px;
      color: #CCC;
    }
  </ui:style>
  <g:HorizontalPanel addStyleNames="{style.container}" verticalAlignment="ALIGN_MIDDLE">
    <g:cell width="50px">
      <g:Image styleName="{style.avatar}" ui:field="initiatorImage"/>
    </g:cell>
    <g:cell>
      <g:VerticalPanel>
        <g:Label styleName="{style.initiatorName}" ui:field="initiatorNameContainer" />
        <g:Label styleName="{style.requestTitle}" ui:field="requestTitleContainer" />
        <g:Label styleName="{style.date}" ui:field="dateContainer" />
      </g:VerticalPanel>
    </g:cell>
    <g:cell width="50px">
      <g:Image styleName="{style.avatar}" ui:field="requestStateImage" />
    </g:cell>
 </g:HorizontalPanel>
</ui:UiBinder>