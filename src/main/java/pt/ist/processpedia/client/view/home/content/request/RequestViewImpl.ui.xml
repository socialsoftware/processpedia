<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      width: 100%;
    }
    .processInfoContainer {
      width: 100%;
      color: white;
      background-color: black;
      padding: 10px 10px;
    }
    .processTitle {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .processDescription {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 16px;
      font-weight: 300;
    }
    .requestInfoContainer {
      width: 100%;
      height: 100%;
    }
  </ui:style>
  <g:VerticalPanel addStyleNames="{style.container}" verticalAlignment="ALIGN_MIDDLE">
    <g:VerticalPanel styleName="{style.processInfoContainer}">
      <g:Label styleName="{style.processTitle}" ui:field="processTitleContainer"/>
      <g:Label styleName="{style.processDescription}" ui:field="processDescriptionContainer"/>
    </g:VerticalPanel>
    <g:SimplePanel styleName="{style.requestInfoContainer}" ui:field="requestInfoContainer" />
 </g:VerticalPanel>
</ui:UiBinder>