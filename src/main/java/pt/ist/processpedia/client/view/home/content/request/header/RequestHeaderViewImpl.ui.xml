<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      width: 100%;
      padding: 10px 10px;
      background-color: #000;
      color: #FFF;
    }
    .avatar {
      width: 22px;
      height: 22px;
    }
    .userName {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 12px;
      font-weight: 300;
    }
    .subject {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;      
    }
    .processTitle {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 15px;
      font-weight: bold;
      margin-bottom: 3px;
    }
  </ui:style>
  <g:VerticalPanel styleName="{style.container}">
    <g:FlowPanel>
      <g:Image styleName="{style.avatar}" ui:field="initiatorAvatarContainer" />
      <g:Image styleName="{style.userName}" ui:field="initiatorNameContainer" />
    </g:FlowPanel>
    <g:FlowPanel>
      <g:Image styleName="{style.avatar}" ui:field="fromAvatarContainer" />
      <g:Label styleName="{style.userName}" ui:field="fromNameContainer" />
    </g:FlowPanel>
    <g:Label styleName="{style.subject}" ui:field="subjectContainer"/>
    <g:Label styleName="{style.processTitle}" ui:field="processTitleContainer"/>
  </g:VerticalPanel>
</ui:UiBinder>