<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      width: 100%;
      padding: 10px 10px;
      background-color: #000;
      color: #FFF;
    }
    .userContainer {
      width: 200px;
      display: inline;
      
    }
    .avatar {
      width: 22px;
      height: 22px;
      display: inline;
    }
    .userName {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 12px;
      font-weight: 300;
      display: inline;
    }
    .subject {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;      
      display: inline;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.container}">
    <g:Label styleName="{style.subject}" ui:field="subjectContainer"/>
    <g:FlowPanel styleName="{style.userContainer">
      <g:Image styleName="{style.avatar}" ui:field="initiatorAvatarContainer" />
      <g:Label styleName="{style.userName}" ui:field="initiatorNameContainer" />
    </g:FlowPanel>
    <g:FlowPanel styleName="{style.userContainer">
      <g:Image styleName="{style.avatar}" ui:field="fromAvatarContainer" />
      <g:Label styleName="{style.userName}" ui:field="senderNameContainer" />
    </g:FlowPanel>

  </g:FlowPanel>
</ui:UiBinder>