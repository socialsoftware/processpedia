<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.view.home.content">
  <ui:style>
    .header {
      width: 100%;
      background-color: #000;
      color: #FFF;
    }
    .leftColumn {
      width: 100%;
      height: 100%;
      border-right: solid 1px #000;
      background-color: #EEE;
    }
    .middleColumn {
      width: 100%;
    }
    .rightColumn {
      width: 100%;
      height: 100%;
      border-left: solid 1px #CCC;
      background-color: #EEE;
    }
  </ui:style>
  <g:DockLayoutPanel unit="PX">
    <g:north size="75">
      <g:SimpleLayoutPanel styleName="{style.header}" ui:field="headerContainer" />
    </g:north>
    <g:center>
      <g:SimpleLayoutPanel styleName="{style.middleColumn}" ui:field="middleColumnContainer" />
    </g:center>
    <g:west size="300">
      <g:SimpleLayoutPanel styleName="{style.leftColumn}" ui:field="leftColumnContainer" />
    </g:west>
    <g:east size="300">
      <g:SimpleLayoutPanel styleName="{style.rightColumn}" ui:field="rightColumnContainer" />
    </g:east>
  </g:DockLayoutPanel>
</ui:UiBinder>