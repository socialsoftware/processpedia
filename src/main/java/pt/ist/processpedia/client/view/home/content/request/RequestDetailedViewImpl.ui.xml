<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.view.home.content">
  <ui:style>
    .requestContentContainer {
      width: 100%;
    }
    .requestsContainer {
      width: 100%;
      height: 100%;
      padding: 10px;
      background-color: #EEE;
      color: white;
      border-right: solid 1px #CCC;
    }
  </ui:style>

  <g:DockLayoutPanel unit="PX">
    <g:north size="75">
      <p:process.header.ProcessHeaderViewImpl ui:field="processHeader" />
    </g:north>
    <g:center>
      <g:SimpleLayoutPanel styleName="{style.requestContentContainer}" ui:field="requestContentContainer" />
    </g:center>
    <g:west size="300">
      <p:request.RequestSidebarViewImpl styleName="{style.requestsContainer}" ui:field="requestSidebar" />
    </g:west>
  </g:DockLayoutPanel>
</ui:UiBinder>